# Deye Inverter Configuration
INVERTER_IP=192.168.1.100
LOGGER_SERIAL=1234567890

# Weather (coordinates for Open-Meteo API)
WEATHER_LATITUDE=50.4501
WEATHER_LONGITUDE=30.5234

# Inverter Capabilities (optional - auto-detected if not set)
# INVERTER_PHASES=3          # 1 for single-phase, 3 for three-phase
# INVERTER_HAS_BATTERY=true  # true or false
# INVERTER_PV_STRINGS=2      # 1 or 2

# Outage Schedule Provider
# OUTAGE_PROVIDER=lvivoblenergo  # "lvivoblenergo", "yasno", or "none" to disable
OUTAGE_GROUP=1.1

# YASNO provider settings (only used when OUTAGE_PROVIDER=yasno)
# OUTAGE_REGION_ID=25            # YASNO region (25 = Kyiv)
# OUTAGE_DSO_ID=902              # YASNO DSO (902 = DTEK Kyiv)
# OUTAGE_GROUP=2.1               # Queue/group number (1.1 - 6.2)

# Telegram Bot (optional)
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_ALLOWED_USERS=123456789,987654321

# Deployment (used by deploy.sh)
DEPLOY_HOST=192.168.1.100
DEPLOY_USER=youruser
DEPLOY_DIR=/home/youruser/deye-dashboard
DEPLOY_SERVICE_NAME=deye-dashboard

# Optional: Data file paths
OUTAGE_HISTORY_FILE=outage_history.json
PHASE_STATS_FILE=phase_stats.json
PHASE_HISTORY_FILE=phase_history.json
